<h3><a class="btn btn-secondary" href="/employees"><i class="fa fa-plus"></i> Create New</a> Employee List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Role</th>
            <th>Favorite Quote</th>
            <th>Favorite Joke</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{formatTime this.hireDate "YYYY-MM-DD"}}</td>
            <td>{{this.role}}</td>
            <td>{{this.favoriteQuote}}</td>
            <td>{{this.favoriteJoke}}</td>
            <td width="20%">
                <a href="/employees/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employees/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>